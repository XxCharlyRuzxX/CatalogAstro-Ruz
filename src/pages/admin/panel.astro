---
import LogoutButton from "@/components/admin/LogoutButton";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout>
  <div class="mx-10 lg:mx-20 mt-5 mb-30">
    <h1 class="text-xl md:text-2xl font-bold mb-6 pt-8 text-center">
      Panel de Administración
    </h1>
    <div
      class="grid grid-cols-1 md:grid-cols-2 w-full gap-6 justify-items-center max-w-2xl mx-auto my-5 md:my-15"
    >
      <a href="./myproducts" data-astro-reload>
        <div
          class="bg-gray-100 hover:bg-orange-200 transform hover:scale-105 transition-all duration-300 w-50 h-50 md:w-75 md:h-75 p-2 rounded-2xl flex items-center justify-center flex-col gap-2"
        >
          <p
            class="text-center text-gray-800 text-[16px] md:text-[18px] lg:text-[20px]"
          >
            Administrar <br /> Mis Productos
          </p>
          <Image
            class="w-1/3"
            src="/icons/beauty.svg"
            alt="Catálogo"
            width={40}
            height={40}
          />
        </div>
      </a>
      <a href="./mycategories " data-astro-reload>
        <div
          class="bg-gray-100 hover:bg-orange-200 transform hover:scale-105 transition-all duration-300 w-50 h-50 md:w-75 md:h-75 p-2 rounded-2xl flex items-center justify-center flex-col gap-2"
        >
          <p
            class="text-center text-gray-800 text-[16px] md:text-[18px] lg:text-[20px]"
          >
            Administrar <br /> Mis Categorias
          </p>
          <Image
            class="w-1/3"
            src="/icons/category.svg"
            alt="Catálogo"
            width={40}
            height={40}
          />
        </div>
      </a>
    </div>
    <div class="flex justify-center">
      <LogoutButton client:only/>
    </div>
  </div>
</Layout>
