---
import Layout from "@/layouts/Layout.astro"
const url = new URL(Astro.url);
const showError = url.searchParams.get("error") === "1";
---
<Layout>
  <form action="/api/admin/login" method="POST" class="flex flex-col gap-4 max-w-sm mx-auto mt-20 text-center">
    <h1 class="text-2xl font-bold mb-4">Bienvenido Administrador</h1>
    <p class="mb-4">Por favor, ingresa la contraseña de administrador para continuar.</p>
    <input
      type="password"
      name="password"
      placeholder="Contraseña de administrador"
      class="border p-2 rounded"
    />
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">
      Entrar
    </button>
    {showError && <p class="text-red-600 mt-2">Contraseña incorrecta</p>}
  </form>
</Layout>

