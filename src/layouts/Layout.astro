---
import HeaderPage from "@components/HeaderPage.astro";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icons/dragonfly.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inria+Sans:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Lora:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Liz Ruz</title>
    <ClientRouter />
	</head>
	<body>
		<HeaderPage />
    <main class="pt-[12vh] font-lora">
      <slot />
    </main>
	</body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
<style :isglobal>
  html {
    font-family: 'Lora', serif;
  }
</style>

