---
import { Image } from "astro:assets";
import { Colors } from "@utils/colors";
import CartBadge from "./react-components/CartBadge";
---

<div class="fixed z-50 w-full h-[8vh] md:h-[12vh] flex items-center px-[0.25rem] sm:px-[0.5rem] md:px-[1rem]" style={`background-color: ${Colors.primaryGreen}`}>
  <div class="flex-1 flex items-center gap-[0.625rem] md:gap-[1.25rem]">
    <a href="/my-products">
      <div class="flex flex-col justify-center items-center relative">
        <div class="relative">
          <CartBadge client:load />
          <Image
            class="w-[1.5625rem] h-[1.5625rem] sm:w-[1.875rem] sm:h-[1.875rem] md:w-[2.5rem] md:h-[2.5rem]"
            src="/icons/supermarket.svg"
            alt="Catálogo"
            width={40}
            height={40}
          />
        </div>
        <p class="text-[0.625rem] sm:text-[0.75rem] text-black md:text-[0.875rem]">Mis Productos</p>
      </div>
    </a>

    <a href="/catalog">
      <div class="flex flex-col justify-center items-center">
        <Image
          class="w-[1.5625rem] h-[1.5625rem] sm:w-[1.875rem] sm:h-[1.875rem] md:w-[2.5rem] md:h-[2.5rem]"
          src="/icons/beauty.svg"
          alt="Catálogo"
          width={40}
          height={40}
        />
        <p class="text-[0.625rem] sm:text-[0.75rem] text-black md:text-[0.875rem]">Catálogo</p>
      </div>
    </a>
  </div>

  <a href="/">
    <div class="flex-1 flex justify-center items-center gap-[0.5rem] md:gap-[0.75rem]">
      <Image
        class="w-[1.5625rem] h-[1.5625rem] sm:w-[1.875rem] sm:h-[1.875rem] md:w-[3.125rem] md:h-[3.125rem]"
        src="/icons/dragonfly.svg"
        alt="Logo"
        width={50}
        height={50}
      />
      <h3 class="text-[1.25rem] sm:text-[1.5rem] md:text-[1.875rem] font-semibold text-black">Liz Ruz</h3>
    </div>
  </a>

  <div class="flex-1 flex justify-end items-center">
    <div class="flex flex-col justify-center items-center">
      <div class="flex justify-center items-center gap-[0.5rem] pb-[0.25rem]">
        <a href="https://facebook.com/Lizruz" target="_blank">
          <Image
            class="w-[1.25rem] h-[1.25rem] sm:w-[1.5625rem] sm:h-[1.5625rem] md:w-[1.875rem] md:h-[1.875rem]"
            src="/icons/facebook-logo.svg"
            alt="Facebook Icon"
            width={30}
            height={30}
          />
        </a>
        <a href="https://instagram.com/Lizruz" target="_blank">
          <Image
            class="w-[1.25rem] h-[1.25rem] sm:w-[1.5625rem] sm:h-[1.5625rem] md:w-[1.875rem] md:h-[1.875rem]"
            src="/icons/instagram-logo.svg"
            alt="Instagram Icon"
            width={30}
            height={30}
          />
        </a>
      </div>
      <p class="text-[0.625rem] sm:text-[0.75rem] text-black md:text-[0.875rem]">Mis Redes Sociales</p>
    </div>
  </div>
</div>
